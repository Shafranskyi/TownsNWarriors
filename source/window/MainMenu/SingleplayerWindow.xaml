<Window x:Class="TownsAndWarriors.window.SingleplayerWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TownsAndWarriors.window"
        mc:Ignorable="d"
         Title="The best game in the world!" Height="450" Width="800"
		MinHeight="450" MinWidth="800"
		Style="{StaticResource MainWindowStyle}">
    <Grid>
		<DockPanel LastChildFill="False">
			<DockPanel.Background>
				<ImageBrush ImageSource="..\..\img\window\mainWindow\background.jpg">
				</ImageBrush>
			</DockPanel.Background>

			<DockPanel LastChildFill="True" DockPanel.Dock="Right" Margin="7 50 15 15">

				
				<Button Click="Button_Click_Exit" DockPanel.Dock="Bottom" Content="Exit"/>
				<Button Click="Button_Click_Back" DockPanel.Dock="Bottom" Content="Back"/>
				
				<StackPanel VerticalAlignment="Center" Orientation="Vertical"  >
					<Button Click="Button_Click_Campaign" Content="Campaign"/>
					<Button Click="Button_Click_Load_Game" Content="Load game"/>
					<Button Click="Button_Click_Select_Map" Content="Select map"/>
					<Button Click="Button_Click_Random_Map" Content="Random map"/>
				</StackPanel>

			</DockPanel>

		</DockPanel>
	</Grid>
</Window>
